{
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "types": ["node", "mocha"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*",
    "node_modules/@types/enzyme-adapter-react-16/index.d.ts",
    "node_modules/@types/mocha/index.d.ts"
  ]
}
